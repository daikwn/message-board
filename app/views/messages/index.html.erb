<style>
.form-group {
	margin-bottom: 10px;
}
</style>

<div class="panel panel-default">
  <div class="panel-heading">
    MESSAGE LIST
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, class:'form-horizontal') do |f| %>
	<div class="form-group">
		<label for="Username" class="col-sm-2 control-label">NAME</label>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control", id: "Username", placeholder: "NAME" %>
		</div>
	</div>
	
	<div class="form-group">
		<label for="text" class="col-sm-2 control-label">MESSAGE</label>
		<div class="col-sm-10">
			<%= f.text_area :body, class: "form-control", rows:"2", id: "text", placeholder: "MESSAGE" %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit class: "btn btn-sm btn-primary" %>
		</div>
	</div>
<% end %>