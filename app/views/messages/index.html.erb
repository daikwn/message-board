<style>

.form-group{
 margin-top: 10px;
}

</style>

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<form class="form-horizontal" id="new_message" action="/messages" accept-charset="UTF-8" method="post">
	<div class="form-group">
		<label class="col-sm-2 control-label">NAME</label>
		<div class="col-sm-10">
		  <input type="text" class="form-control" id="Username" placeholder="name" name="message[name]" />
		</div>
	</div>
	
	<div class="form-group">
		<label class="col-sm-2 control-label" >MESSAGE</label>
		<div class="col-sm-10">
			<textarea type="text" class="form-control" id="text" name="message[body]" rows="2">
			</textarea>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">CREATE NEW MESSAGE</button>
		</div>
	</div>
</form>